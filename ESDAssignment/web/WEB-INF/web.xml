<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>dbUrluser</param-name>
        <param-value>jdbc:derby://localhost/User</param-value>
    </context-param>
    <context-param>
        <param-name>dbUrlitems</param-name>
        <param-value>jdbc:derby://localhost/ItemsDB</param-value>
    </context-param>
    <context-param>
        <param-name>dbCartList</param-name>
        <param-value>jdbc:derby://localhost/CartList</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>abc</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>123</param-value>
    </context-param> 
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
     <display-name>Shopping Cart</display-name>
  <description>
    Simple Shopping Cart
  </description>
 
  <servlet>
    <servlet-name>CartController</servlet-name>
    <servlet-class>servlet.CartController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CartController</servlet-name>
      <url-pattern>/servlet/CartController.java</url-pattern>
  </servlet-mapping>
  
   <servlet>
      <servlet-name>ItemsServlet</servlet-name>
      <servlet-class>servlet.ItemsServlet</servlet-class>
   </servlet>

   <servlet-mapping>
      <servlet-name>ItemsServlet</servlet-name>
      <url-pattern>/ItemsServlet</url-pattern>
   </servlet-mapping>
 
</web-app>
