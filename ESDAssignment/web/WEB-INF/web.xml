<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>dbUrluser</param-name>
        <param-value>jdbc:derby://localhost/ITP4912_DB</param-value>
    </context-param>
    <context-param>
        <param-name>dbUrlitems</param-name>
        <param-value>jdbc:derby://localhost/ITP4912_DB</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>APP</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>APP</param-value>
    </context-param> 
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
     <display-name>Shopping Cart</display-name>
  <description>
    Simple Shopping Cart
  </description>
 
  <servlet>
    <servlet-name>CartController</servlet-name>
    <servlet-class>servlet.CartController</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>CartController</servlet-name>
      <url-pattern>/servlet/*</url-pattern>
  </servlet-mapping>
 
</web-app>
